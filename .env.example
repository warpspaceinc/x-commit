# GitHub API Configuration
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=github_pat_your_github_personal_access_token

# Optional: Default repository (format: owner/repo)
GITHUB_DEFAULT_REPO=owner/repo

# Claude API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_api_key

# Claude Model to use
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Slack API Configuration
# Get these from: https://api.slack.com/apps
SLACK_APP_ID=A0XXXXXXXXX
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_VERIFICATION_TOKEN=your_slack_verification_token
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token  # Required for Socket Mode

# Slack Bot Settings
SLACK_CHANNEL=#commits  # Channel name or ID to monitor (e.g., #commits or C1234567890)

# Slack Bot Mode
# Set to 'true' to automatically analyze all GitHub commits
# Set to 'false' to only analyze when @x-commit is mentioned (default)
SLACK_AUTO_ANALYZE=false

# Application Settings
LOG_LEVEL=INFO
OUTPUT_DIR=./reports

# Optional: Maximum diff size to analyze (in lines)
# MAX_DIFF_LINES=1000